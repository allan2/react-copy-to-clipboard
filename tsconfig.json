{
    "compilerOptions": {
		"outDir": "dist",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "alwaysStrict": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
		"declaration": true,
        "incremental": true,
    },
    "include": ["src"],
	"exclude": ["node_modules", "lib"]
}
